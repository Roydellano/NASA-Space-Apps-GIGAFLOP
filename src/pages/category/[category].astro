    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 1rem;
    line-height: 1.1;
  }

  .category-description {
    font-size: 1.25rem;
    color: var(--gray-600);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .category-stats {
    display: flex;
    justify-content: center;
    gap: 3rem;
  }

