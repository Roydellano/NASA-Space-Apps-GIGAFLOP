---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ArticleCard from '../../components/ArticleCard.astro';
import { getSafeNewsCollection } from '../../utils/newsLoader';

export async function getStaticPaths() {
  const allNews = await getSafeNewsCollection();
  
  // Extract all unique tags from articles and create category mappings
  const categoryMappings: Record<string, string[]> = {
    'human-physiology': ['Human Physiology', 'Space Medicine', 'Bone Density', 'Muscle Atrophy', 'Cardiovascular'],
    'microgravity': ['Microgravity', 'Cell Biology', 'Gene Expression', 'Molecular Biology'],
    'radiation-biology': ['Radiation Biology', 'DNA Damage', 'Radiation Exposure'],
    'plant-biology': ['Plant Biology', 'Closed Ecosystems', 'Life Support Systems', 'Astrobiology']
  };
  
  const paths = Object.keys(categoryMappings).map(category => {
    const relevantTags = categoryMappings[category];
    const categoryArticles = allNews.filter(article => 
      article.data.tags.some((tag: string) => 
        relevantTags.some((relevantTag: string) => 
          tag.toLowerCase().includes(relevantTag.toLowerCase()) ||
          relevantTag.toLowerCase().includes(tag.toLowerCase())
        )
      )
    ).sort((a, b) => 
      new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime()
    );
    
    // Format category name for display
    const displayNames: Record<string, string> = {
      'human-physiology': 'Human Physiology',
      'microgravity': 'Microgravity',
      'radiation-biology': 'Radiation Biology',
      'plant-biology': 'Plant Biology'
    };
    
    return {
      params: { category },
      props: { 
        articles: categoryArticles,
        categoryName: displayNames[category] || category,
        categoryTags: relevantTags
      }
    };
  });
  
  return paths;
}

const { category } = Astro.params;
const { articles, categoryName, categoryTags } = Astro.props;

// Get featured article for this category (highest priority or most recent)
const featuredArticle = articles.find(article => article.data.priority === 'high') || articles[0];
const regularArticles = articles.filter(article => article?.slug !== featuredArticle?.slug);

// Category descriptions
const categoryDescriptions: Record<string, string> = {
  'human-physiology': 'Explore NASA research on astronaut health, bone density, muscle atrophy, cardiovascular effects, and space medicine critical for long-duration missions.',
  'microgravity': 'Discover how microgravity affects cellular responses, gene expression, and biological systems in space environments.',
  'radiation-biology': 'Understand DNA damage, repair mechanisms, and long-duration radiation exposure effects on living organisms in space.',
  'plant-biology': 'Learn about closed ecosystems, life support systems, and sustainable food production for future space missions.'
};

const description = categoryDescriptions[category as string] || `Latest ${categoryName} research from NASA's bioscience publications.`;
---

<Layout title={`${categoryName} Research - BioNauta`} description={description}>
  <Header />
  
  <main>
    <!-- Category Hero Section -->
    <section class="hero-section" style="background: linear-gradient(135deg, var(--primary-50) 0%, var(--primary-100) 100%);">
      <div class="category-hero">
      <div class="container">
        <div class="category-header">
          <nav class="breadcrumb">
            <a href="/" class="breadcrumb-link">Home</a>
            <span class="breadcrumb-separator">/</span>
            <span class="breadcrumb-current">{categoryName}</span>
          </nav>
          
          <h1 class="category-title">
            <span class="text-gradient">{categoryName}</span> Research
          </h1>
          <p class="category-description">{description}</p>
          
          <div class="category-stats">
            <div class="stat">
              <span class="stat-number">{articles.length}</span>
              <span class="stat-label">Publications</span>
            </div>
            <div class="stat">
              <span class="stat-number">NASA</span>
              <span class="stat-label">Repository</span>
            </div>
          </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Article for Category -->
    {featuredArticle && (
      <section class="featured-section">
        <div class="container">
          <div class="section-header">
            <h2 class="section-title">Featured {categoryName} Study</h2>
            <div class="category-badge">{categoryName}</div>
          </div>
          <ArticleCard article={featuredArticle} featured={true} />
        </div>
      </section>
    )}

    <!-- Category Articles -->
    {regularArticles.length > 0 && (
      <section class="articles-section">
        <div class="container">
          <div class="section-header">
            <h2 class="section-title">More {categoryName} Publications</h2>
            <div class="articles-count">{regularArticles.length} publications</div>
          </div>
          
          <div class="articles-grid">
            {regularArticles.map((article) => (
              <ArticleCard article={article} />
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Empty State -->
    {articles.length === 0 && (
      <section class="empty-state">
        <div class="container">
          <div class="empty-content">
            <h2 class="empty-title">No {categoryName} Publications Yet</h2>
            <p class="empty-description">
              We're working on summarizing more {categoryName.toLowerCase()} research from NASA's repository. 
              Check back soon for updates!
            </p>
            <a href="/" class="back-home-button">
              ‚Üê Back to Latest Publications
            </a>
          </div>
        </div>
      </section>
    )}
  </main>

  <Footer />
</Layout>

<style>
